           #</legend>
            #<div class="mtg-elem">
             # <label class="form-label">Options:
              #</label>
             # <select name="cardfilter" class="form-control">
              #  <option value="B" selected>Black Cards</option>
               # <option value="U">Blue Cards</option>
                #<option value="G">Green Cards</option>
